package a1.playerGameObjects;

import java.util.Scanner;

public class Player {
	
	private int lives = 3;
	
	private int score = 0;
	
	
	
	

	public int getLives() {
		return lives;
	}

	public void setLives() {
		this.lives = 3;
	}
	
	public void decrementLives(){
		if(this.lives > 0){
			this.lives--;
		}
	}

	public int getScore() {
		return score;
	}

	public void setScore(int score) {
		this.score = this.score + score;
	}
	
	

}
