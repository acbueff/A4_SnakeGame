package a1.Model;

public class Clock {
	private int count;
	
	public Clock(){
		setCount(0);
	}
	
	public void tick(){
		setCount(getCount() + 1);
	}
	
	public void reset(){
		this.setCount(0);
	}

	public int getCount() {
		return count;
	}

	public void setCount(int count) {
		this.count = count;
	}
	
}

